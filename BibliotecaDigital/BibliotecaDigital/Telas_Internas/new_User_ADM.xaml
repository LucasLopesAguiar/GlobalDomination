        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotecaDigital"
        mc:Ignorable="d"
        Title="Cadastrar Usuário" Height="383.905" Width="537.476"
        Icon="/BibliotecaDigital;component/Icons/main_icon.png"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="title_label_ADM" Content="Novo usuário" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>

        <Label x:Name="login_label_ADM" Content="Login:" HorizontalAlignment="Left" Margin="87,127,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="username_text_ADM" HorizontalAlignment="Left" Height="23" Margin="87,158,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="174" Padding="27,2,0,0" MaxLength="15"/>
        <Image Source="/BibliotecaDigital;component/Icons/user.png" HorizontalAlignment="Left" Height="21" Margin="87,160,0,0" VerticalAlignment="Top" Width="21" RenderTransformOrigin="1.189,0.554"/>

        <Label x:Name="senha_label_ADM" Content="Senha:" HorizontalAlignment="Left" Margin="85,194,0,0" VerticalAlignment="Top"/>
        <PasswordBox  x:Name="senha_text_ADM"  HorizontalAlignment="Left" Height="23" Margin="85,220,0,0" VerticalAlignment="Top" Width="174" Padding="27,2,0,0" MaxLength="15"/>
        <Image Source="/BibliotecaDigital;component/Icons/pass.png" HorizontalAlignment="Left" Height="21" Margin="87,222,0,0" VerticalAlignment="Top" Width="21" RenderTransformOrigin="1.189,0.554"/>


        <Label x:Name="senha_check_label_ADM" Content="Confirmar Senha:" HorizontalAlignment="Left" Margin="304,194,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="senha_check_text_ADM" HorizontalAlignment="Left" Height="23" Margin="304,220,0,0" VerticalAlignment="Top" Width="174" Padding="27,2,0,0" MaxLength="15"/>
        <Image Source="/BibliotecaDigital;component/Icons/pass.png" HorizontalAlignment="Left" Height="21" Margin="306,221,0,0" VerticalAlignment="Top" Width="21" RenderTransformOrigin="1.189,0.554"/>


        <Button x:Name="new_user_cadastro_btn_ADM" Content="Cadastrar" HorizontalAlignment="Left" Margin="107,271,0,0" VerticalAlignment="Top" Width="122" Height="34"/>
        <CheckBox x:Name="DefineUserAdm" Content="Usuário Administrador" HorizontalAlignment="Left" Margin="342,158,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nomepessoa_text_ADM" HorizontalAlignment="Left" Height="23" Margin="85,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="395" Padding="27,2,0,0" />
        <Image Source="/BibliotecaDigital;component/Icons/user.png" HorizontalAlignment="Left" Height="21" Margin="85,104,0,0" VerticalAlignment="Top" Width="21" RenderTransformOrigin="1.189,0.554"/>
        <Label x:Name="nomepessoa_label_ADM_Copy" Content="Nome Completo:" HorizontalAlignment="Left" Margin="87,78,0,0" VerticalAlignment="Top"/>
        <Button x:Name="new_user_cancela_btn_ADM_Copy" Content="Cancelar" HorizontalAlignment="Left" Margin="306,271,0,0" VerticalAlignment="Top" Width="122" Height="34"/>





    </Grid>
